  <script>
    function handleOption(option) {
      const body = document.getElementById('chatbotBody');
      body.innerHTML = '';
      let response = '';

      switch(option) {
        case 'products':
          response = `Great! What category are you interested in?<br><ul>
            <li>üì± Smartphones (e.g., Quantum X)</li>
            <li>üéß Audio Devices (e.g., AeroPod, IonPro)</li>
            <li>üñ•Ô∏è Smart Tech & PCs (e.g., HyperStation, NovaPad)</li>
            <li>üè† Home & Accessories (e.g., OmniCam, QuantumDock)</li>
          </ul>`;
          break;
        case 'track':
          response = `Please enter your order number or email and we‚Äôll check it for you.`;
          break;
        case 'support':
          response = `Which product do you need help with? You can also check our FAQs.`;
          break;
        case 'sales':
          response = `Are you shopping for personal use or a business order? I can connect you to a live agent.`;
          break;
        case 'question':
          response = `Ask me anything! If I can‚Äôt answer it, I‚Äôll connect you to a human right away.`;
          break;
      }

      body.innerHTML = `<div class='bot-message'>${response}</div>`;
    }
  </script>

